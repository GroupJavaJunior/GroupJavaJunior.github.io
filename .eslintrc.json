{
    "env": {
        "jquery": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "indent": [
            "warn",
            2
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-cond-assign": [
            "warn",
            "always"
        ],
        "camelcase": [
            0,
            {
                "properties": "never"
            }
        ],
        "comma-dangle": [
            "warn",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "eqeqeq": [
            "warn",
            "always"
        ]
    }
}